
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to all collections
    match /{path=**} {
      allow read: if true;
    }

    // Restrict writes to be more secure in the future if needed
    // For now, allowing writes for caterer functionality
    match /caterers/{catererId}/{document=**} {
      allow write: if true;
    }
  }
}
